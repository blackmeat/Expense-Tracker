<div class="container col-6  justify-content-md-center">
  <div class="py-4">
    <select class="custom-select">
      <option selected>請選擇分類</option>
      <option value="家居物業">家居物業</option>
      <option value="交通出行">交通出行</option>
      <option value="休閒娛樂">休閒娛樂</option>
      <option value="餐飲食品">餐飲食品</option>
      <option value="其他">其他</option>
    </select>
  </div>

  <div class="mx-3 mb-5 pb-4">
    <div style="float:left">
      <p style="font-size: large;">總金額：</p>
    </div>
    <div style="float:right">
      <h1>200</h1>
    </div>
  </div>
</div>

<div class="container col-6 text-center justify-content-md-center" style="clear: left;">
  <ul class="list-group">
    {{#each records}}
    <div>
      <li class="list-group-item mb-4">
        <div class="row" style="padding:-5px; height:40px">
          <div class="col-auto mr-auto ">
            <div class="mr-3" style="float:left; color:#0080FF; font-size:35px"><i class="fas fa-home"></i></div>
            <div class="mr-3" style="float:left;">
              <p style="font-size: 30px;">{{this.name}}</p>
            </div>
          </div>
          <div class="row col-auto ">
            <div class="mr-3">
              <p style="font-size: 25px;">{{this.money}}$</p>
            </div>
            <div>
              <a href="/records/{{this.id}}/edit" class="px-3 btn btn-light text-dark border-dark mr-1">修改</a>
            </div>
            <form action="/records/{{this.id}}/delete?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-dark">刪除</button>
            </form>
          </div>
        </div>
      </li>
    </div>
    {{/each}}

  </ul>
  <div class="mt-3">
    <a href="/records/new" class="rounded-pill btn btn-light text-danger border-dark" style="font-size:30px">新增支出</a>
  </div>
</div>